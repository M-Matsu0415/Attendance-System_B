<% provide(:title, '出勤中社員一覧') %>
<h1><%= "出勤中社員一覧" %></h1>

<table class = "table table-bordered table-condensed table-working-members" id = "table-working-members">
  <thead>
    <tr>
      <th>社員番号</th>
      <th>名前</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |working_member| %>
      <% if working_member[:worked_on] == Date.current %>
        <% if !working_member.@attendance[:started_at].present? && working_member.@attendance[:finished_at].blank? %>
        <% end %>
          <tr>
            <td><%= working_member.id  %></td>
            <td><%= working_member.name  %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>