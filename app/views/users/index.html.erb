<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

<div class = "col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table class = "table table-condensed table-hover" id = "table-users">
  <!--テーブルの各セルにボーダー(線)を付ける、condensed：通常よりも幅の狭いテーブル(=table-sm)-->
    <thead>
      <tr>  <!--trは表の横部分の指定を行う。-->
        <th>  <!--thで縦の部分の指定を行う。-->
          <%= User.human_attribute_name :name %>
        </th>
        <th></th>
      </tr>
    </thead>
    
    <% @users.each do |user| %>
      <tr>
        <td>  <!--tdで縦の部分の指定を行う。-->
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to user.name, user %> / <%= link_to "削除", user, method: :delete,
             data: { confirm: "#{user.name}を削除してよろしいですか？"} %>
          <% else %>
            <%= user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>