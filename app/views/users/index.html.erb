<% provide(:title, 'All Users') %>
<h1><%= "#{@index_page_title}" %></h1>

<div class = "col-md-3 form-inline pull-right">
  <!--ユーザー名部分検索機能-->
  <%= form_with(url: users_path, method: :get, local: true) do |f| %>
    <%= f.label :ユーザー名検索, class: "label-search" %>
    <%= f.text_field :search, class: "form-control" %>
    <%= f.submit :検索, class: "btn btn-primary btn-search"%>
  <% end %>
</div>

<div class = "col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table class = "table table-condensed table-hover" id = "table-users">
  <!--テーブルの各セルにボーダー(線)を付ける、condensed：通常よりも幅の狭いテーブル(=table-sm)-->
    <thead>
      <tr>  <!--trは表の横部分の指定を行う。-->
        <th>  <!--thで縦の部分の指定を行う。-->
          <%= User.human_attribute_name :name %>
        </th>
        <th></th>
      </tr>
    </thead>
    
    <% @users.each do |user| %>
      <tr>
        <td>  <!--各ユーザー勤怠編集画面へのリンク／基本情報編集画面へのリンク／削除機能ボタン。tdで縦の部分の指定を行う。-->
          <% if current_user.admin? %>
            <%= link_to user.name, user %> / <%= link_to "基本情報編集", edit_basic_info_user_path(user) %> / 
            <%= link_to "削除", user, method: :delete, data: { confirm: "#{user.name}を削除してよろしいですか？"} %>
          <% else %>
            <%= user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>