<% provide(:title, 'Attendance Log') %>
<% provide(:class_text, 'log-search') %>
<h1><%= "勤怠修正ログ" %></h1>
<div>
  <%= link_to "リセット", attendance_log_user_path(@user), method: :get, local: true, class: "btn btn-primary btn-md btn-attendance-log-search" %>
</div>

<div class = attendance-log-search>
    <%= form_with(url: attendance_log_search_user_path, method: :get, local: true) do |f| %>
  
      <%= f.submit "検索", class: "btn btn-primary btn-md btn-log-search" %>
      <div>
        <%= f.date_select :year, { discard_month: true, discard_day: true } %>
      </div>
      <div>
        <%= f.date_select :month, { discard_year: true, discard_day: true } %>
      </div>
    <% end %>
</div>

<div>
  <table class = "table table-bordered table-condensed table-hover" id = "table-attendances-body">
    <thead>
      <tr>
        <th>日付</th>
        <th>変更前出社時間</th>
        <th>変更前退社時間</th>
        <th>変更後出社時間</th>
        <th>変更後退社時間</th>
        <th>指示者</th>
        <th>承認日</th>
      </tr>
    </thead>
    <tbody>
      <% @attendance_logs.each do |attendance_log| %>
            <tr>
              <!--日付表示-->
              <td><%= attendance_log.worked_on_log.year %>/<%= attendance_log.worked_on_log.mon %>/<%= attendance_log.worked_on_log.day %></td>
              
              <!--変更前出社時間表示-->
              <td><%= l(attendance_log.started_at_log_after_change, format: :time) %></td>
    
              <!--変更前退社時間表示-->
              <td><%= l(attendance_log.finished_at_log_after_change, format: :time) %></td>
    
    　　　    　　<!--変更後出社時間表示-->
              <td><%= l(attendance_log.started_at_log_after_change, format: :time) %></td>
              
              <!--変更後退社時間表示-->
              <td><%= l(attendance_log.finished_at_log_after_change, format: :time) %></td>
              
              <!--指示者表示-->
              <td><%= attendance_log.approval_superior_name %></td>
              
              <!--承認日表示-->
              <td><%= attendance_log.approval_date.year %>/<%= attendance_log.approval_date.mon %>/<%= attendance_log.approval_date.day %></td>
            </tr>
      <% end %>
    </tbody>
  </table>
</div>