<% provide(:title, '拠点情報一覧') %>
<h1><%= "拠点情報一覧" %></h1>

<table class = "table table-bordered table-condensed table-bases" id = "table-bases">
  <thead>
    <tr>
      <th>編集ボタン</th>
      <th>削除ボタン</th>
      <th>拠点番号</th>
      <th>拠点名</th>
      <th>拠点情報</th>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |base| %>
      <tr>
        <td>
          <%= link_to "編集", edit_basis_path(base), class: "btn btn-md btn-primary btn-base-edit" %>
        </td>
        <td>
          <%= link_to "削除", base, method: :delete, data: { confirm: "#{base.name}を削除してよろしいですか？"},
          class: "btn btn-md btn-danger btn-bases-index-delete"%>
        </td>
        <td>
          <%= base.number %>
        </td>
        <td>
          <%= base.name %>
        </td>
        <td>
          <%= base.status %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "拠点追加", new_basis_path, class: "btn btn-lg btn-primary btn-base_add" %>