<%= form_with(model: @month_approval, url: user_month_approvals_path(@user), local: true) do |f| %>
  <% @month_approvals.each do |month_approval| %>
    <%= render 'shared/error_messages', object: @month_approval %>
      <% applicant_user_id = month_approval.applicant_user_id %>
      <% user = User.find(id: applicant_user_id) %>
        <h1><%= "【#{user.name}からの一ヶ月分勤怠申請】" %></h1>

          <table class = "table table-bordered table-condensed table-bases" id = "table-month_approvals">
            <thead>
              <tr>
                <th>月</th>
                <th>指示者確認㊞</th>
                <th>変更</th>
                <th>勤怠を確認する</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= "#{month_approval.approval_month.mon}月" %>
                </td>
                <td>
                  <%= f.select :approval_status, [["出勤", "出勤"], ["退勤", "退勤"]], class: "form-control" %>
                </td>
                <td>
                  <%= base.number %>
                </td>
                <td>
                  <%= link_to "確認", "#", class: "btn btn-md btn-primary btn-attendance-monitor"%>
                </td>
              </tr>
            </tbody>
          </table>
  <% end %>
  <%= f.submit "申請", class: "btn btn-md btn-primary btn-block btn-approval"%>
<% end %>